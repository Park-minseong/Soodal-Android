<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Kshoong" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#FFFFFFFF</item>
        <item name="android:navigationBarDividerColor">#F6F6F6</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.Kshoong.Splash" parent="Theme.SplashScreen">
        <item name="android:actionBarStyle">@style/Theme.Kshoong</item>
        <item name="windowSplashScreenBackground">#00FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher</item>
        <item name="android:windowBackground">#FFFFFFFF</item>
        <item name="android:navigationBarColor">#FFFFFFFF</item>
        <item name="android:navigationBarDividerColor">#F6F6F6</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="postSplashScreenTheme">@style/Theme.Kshoong</item>
    </style>

</resources>